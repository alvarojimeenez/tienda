<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tienda?useSSL=false</property>
		<property name="hibernate.connection.username">alvaro</property>
		<property name="hibernate.connection.password">alvaro</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<mapping class="com.jacaranda.model.Cliente"/>
		<mapping class="com.jacaranda.model.Pedido"/> 
		<mapping class="com.jacaranda.model.Categoria"/>
		<mapping class="com.jacaranda.model.DetallePedido"/>
		<mapping class="com.jacaranda.model.Producto"/>
		<mapping class="com.jacaranda.model.ProductoCategoria"/>
		<mapping class="com.jacaranda.model.SubCategoria"/>
	
	</session-factory>
</hibernate-configuration>
